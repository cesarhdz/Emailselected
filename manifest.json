{
 "name": "Email selected text",
 "version": "1.1",
 "description": "Email selected text",
 "browser_action": {      
   "default_icon": "icon.png",
   "default_title": "Email selected text",
   "default_popup": "popup.html" 
 },
 "permissions": [
   "tabs",
   "http://*/*", 
   "https://*/*"
 ],
 "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["selection.js"],
    "run_at": "document_start",
    "all_frames": true
  }
 ],
 "manifest_version": 2
}